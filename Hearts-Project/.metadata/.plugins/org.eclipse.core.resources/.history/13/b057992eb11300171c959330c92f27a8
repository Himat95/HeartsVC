import java.util.Scanner;
import java.util.concurrent.ArrayBlockingQueue;

public class FinalGame {

	public static void main(String[] args) {
		ArrayBlockingQueue<Player> queue = new ArrayBlockingQueue<Player>(4);

		Trick trick = new Trick();

		Table table = new Table(queue, trick);
		
		System.out.println("Please select a difficulty... \n Easy = 1 \n Hard = 2 \n Exit = 3");
		
		Scanner sc = new Scanner(System.in); 
		
		int s = sc.nextInt();
		
		if (s != 1 || s != 2 || s !=3) {
			System.out.println("Incorrect input, please select difficulty again...");
		}
		
		else {
			switch(s) {
			case 1: 
				break;
				
			case 2:
				break;
				
			case 3: System.exit(0); 
			}
			
		}
			
			
		
		
		
		HumanPlayer p = new HumanPlayer("Himat", 0, table, trick);
		AIPlayer p2 = new AIPlayer("Raj", 1, table, trick);
		AIPlayer p3 = new AIPlayer("Sunny", 2, table, trick);
		AIPlayer p4 = new AIPlayer("Tarun", 3, table, trick);

		queue.add(p); queue.add(p2); queue.add(p3); queue.add(p4);

		table.start();

		p.start();
		p2.start();
		p3.start();
		p4.start();

	}

}
